<persistence  xmlns="http://xmlns.jcp.org/xml/ns/persistence"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.1"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="Week_9"
                      transaction-type="RESOURCE_LOCAL"
    >
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>Classes.Movie</class>
        <properties>
            <property name="hibernate.dialect"
                      value="org.hibernate.dialect.Oracle8iDialect"/>
            <property name="hibernate.connection.driver_class"
                      value="oracle.jdbc.driver.OracleDriver"/>
            <property name="hibernate.connection.url"
                      value="jdbc:oracle:thin:@localhost:1521:XE"/>
            <property name="javax.persistence.jdbc.user" value="MOVIE"/>
            <property name="javax.persistence.jdbc.password" value="MOVIE"/>
        </properties>
    </persistence-unit>
</persistence>